<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#251C12"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/cfm_address"
        style="@style/BarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/cfm_desc"
        style="@style/BarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/confirm_apply_btn"
            style="@style/ButtonTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="4dp"
            android:background="@drawable/bgmain"
            android:text="@string/apply" />

        <Button
            android:id="@+id/confirm_cancel_btn"
            style="@style/ButtonTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_toLeftOf="@id/confirm_apply_btn"
            android:background="@drawable/bgblack"
            android:text="@string/cancel" />
    </RelativeLayout>

</LinearLayout>