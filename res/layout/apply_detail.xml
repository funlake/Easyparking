        <Button
            android:id="@+id/view_comment"
            style="@style/ButtonTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bgpurple"
            android:padding="8dp"
            android:text="@string/view_comment" />

        <Button
            android:id="@+id/start_parking"
            style="@style/ButtonTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bgblack"
            android:padding="8dp"
            android:text="@string/start_parking"
            android:visibility="gone" />
        <Button
            android:id="@+id/stop_parking"
            style="@style/ButtonTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bgred"
            android:padding="8dp"
            android:text="@string/stop_parking"
            android:visibility="gone" />
        <Button
            android:id="@+id/add_comment"
            style="@style/ButtonTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bggreen"
            android:padding="8dp"
            android:text="@string/add_comment"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>