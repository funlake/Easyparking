<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:baselineAligned="false"
    android:gravity="left|center"
    android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
    android:paddingRight="?android:attr/listPreferredItemPaddingRight"
    android:textAppearance="?android:attr/textAppearanceListItemSmall" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rowbg"
        android:gravity="center"
        android:minHeight="80dp"
        android:orientation="vertical"
        android:padding="8dp" >

        <TextView
            android:id="@+id/address"
            style="@style/RowTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:minHeight="30dp"
            android:orientation="horizontal" >

            <RatingBar
                android:id="@+id/myspot_rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/owner"
                style="@style/Label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6dp"
                android:gravity="left|center" />

            <TextView
                android:id="@+id/ownerlabel"
                style="@style/RowDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_toLeftOf="@id/owner"
                android:gravity="left|center"
                android:text="@string/spot_owner" />
        </RelativeLayout>

        <TextView
            android:id="@+id/desc"
            style="@style/RowDesc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:minHeight="10dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/view_comment_btn"
                style="@style/MenuTitle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="6dp"
                android:background="@drawable/bg_smpurple"
                android:focusable="false"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="@string/view_comment" />

            <Button
                android:id="@+id/apply_btn"
                style="@style/MenuTitle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@id/view_comment_btn"
                android:background="@drawable/bg_smorange"
                android:focusable="false"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="@string/apply" />
        </RelativeLayout>
    </LinearLayout>

    <!--
