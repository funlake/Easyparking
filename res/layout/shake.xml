<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent" >

        <Button
                android:id="@+id/search_pos"
                style="@style/ButtonTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bggreen"
                android:padding="8dp"
                android:layout_margin="10dp"
                android:layout_alignParentBottom="true"
                android:text="@string/search_parking" >
        </Button>
        <Button
                android:id="@+id/gotomypage"
                style="@style/ButtonTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bgorange"
                android:padding="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
				android:layout_above="@id/search_pos"
                android:text="@string/goto_mypage" >
        </Button>
    </RelativeLayout>

</LinearLayout>